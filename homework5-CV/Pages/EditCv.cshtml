@page
@model homework5_CV.Pages.EditCvModel
@{
    ViewData["Title"] = "Edit CV";
}

<center><h2>Edit CV</h2></center>

<form method="post" asp-page-handler="Update" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CV.Fname"></label>
        <input asp-for="CV.Fname" class="form-control" name="Fname" />
        <span asp-validation-for="CV.Fname" class="text-danger" data-valmsg-for="Fname"></span>
    </div>


    <div class="form-group">
        <label asp-for="CV.Lname"></label>
        <input asp-for="CV.Lname" class="form-control" name="Lname" />
        <span asp-validation-for="CV.Lname" class="text-danger" data-valmsg-for="Lname"></span>
    </div>


    <div class="form-group">
        <label asp-for="CV.Email"></label>
        <input asp-for="CV.Email" class="form-control" name="Email" />
        <span asp-validation-for="CV.Email" class="text-danger" data-valmsg-for="Email"></span>
    </div>



    <div class="form-group">
        <label asp-for="CV.BDay"></label>
        <input asp-for="CV.BDay" class="form-control" name="BDay" />
        <span asp-validation-for="CV.BDay" class="text-danger" data-valmsg-for="BDay"></span>
    </div>


    <div class="form-group">
        <h4>  <label asp-for="CV.Nationality"></label></h4>
        <select asp-for="CV.Nationality" asp-items="Model.nationalityItems" name="Nationality" class="form-control">
            <option value="">Select Nationality</option>
        </select>
        <span asp-validation-for="CV.Nationality" data-valmsg-for="Nationality"></span>
    </div>


    <div class="form-group">
        <h4> <label asp-for="CV.Sex"></label></h4>
        <input type="radio" asp-for="CV.Sex" value="Male" name="Sex" /> Male
        <input type="radio" asp-for="CV.Sex" value="Female" name="Sex" /> Female
        <span asp-validation-for="CV.Sex"></span>
    </div>

    <div class="form-group">
        <label asp-for="CV.Experience"></label>
        <input asp-for="CV.Experience" class="form-control" name="Experience" />
        <span asp-validation-for="CV.Experience" class="text-danger" data-valmsg-for="Experience"></span>
    </div>

    <div class="form-group">
        <h4><label asp-for="CV.Skills"></label></h4>
        @foreach (var skill in Model.AvailableSkills)
        {
            <div>
                <input type="checkbox"
                       name="Skills"
                       value="@skill"
                @(Model.CV.Skills != null && Model.CV.Skills.Contains(skill) ? "checked" : "") />
                @skill
            </div>
        }
        <span asp-validation-for="CV.Skills" data-valmsg-for="Skills"></span>
    </div>



@* 

    <div class="form-group">
        <h4><label asp-for="CV.Password"></label></h4>
        <input asp-for="CV.Password" name="Password" />
        <span asp-validation-for="CV.Password" data-valmsg-for="Password"></span>
    </div> *@



    <input type="hidden" asp-for="CV.Pdfurl" />



    <input type="hidden" asp-for="CV.Id" name="id"/>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="/AllCv" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

<style>
    body {
        background: linear-gradient(to right, #dbefff, #f8faff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 40px;
    }

    h2 {
        color: #2c3e50;
        margin-bottom: 30px;
        font-size: 28px;
    }

    form {
        max-width: 700px;
        margin: auto;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #34495e;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        box-sizing: border-box;
        font-size: 14px;
    }

    .form-group h4 {
        margin-bottom: 8px;
        color: #2c3e50;
        font-size: 16px;
    }

    input[type="radio"],
    input[type="checkbox"] {
        margin-right: 6px;
        margin-left: 10px;
    }

    .btn {
        padding: 10px 20px;
        font-size: 14px;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        margin-right: 10px;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
    }

    .form-check {
        margin-top: 5px;
    }
</style>
