<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <center><h1>Sign In</h1></center>


    <div class="form-group">
        <label asp-for="viewModelAddUser.Email"></label>
        <input asp-for="viewModelAddUser.Email" class="form-control" name="Email" />
        <span asp-validation-for="Input.Email" class="text-danger" data-valmsg-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="viewModelAddUser.Password"></label>
        <input asp-for="viewModelAddUser.Password" class="form-control" type="password" name="Password" />
        <span asp-validation-for="viewModelAddUser.Password" class="text-danger" data-valmsg-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary">Sign In</button>
    <p>
       <a asp-page="/LogIn">You have an account? </a>
    </p>


    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }
</form>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-image: url('/images/background.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    form {
        background-color: rgba(255, 255, 255, 0.95);
